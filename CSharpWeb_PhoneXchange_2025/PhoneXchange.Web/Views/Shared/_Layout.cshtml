@using System.Security.Claims

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhoneXchange</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">📱 PhoneXchange</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Превключи меню">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Ads">Всички обяви</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Ads/Create">Добави обява</a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated == true)

                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Ads/My">
                                <i class="bi bi-person-badge"></i> Моите обяви
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Favorites" asp-action="MyFavorites">
                                <i class="bi bi-star-fill text-warning"></i> Любими
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Messages/Inbox">Входящи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Messages/Sent">Изпратени</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Messages" asp-action="Activity">
                                <i class="bi bi-clock-history"></i> Активност
                            </a>
                        </li>
                    }
                </ul>

                @if (User?.Identity?.IsAuthenticated == true)

                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link text-info fw-bold">
                                @User.FindFirst(ClaimTypes.Email)?.Value
                            </span>
                        </li>
                        <li class="nav-item">
                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                <button type="submit" class="nav-link btn btn-link text-light">Изход</button>
                            </form>
                        </li>
                    </ul>
                }

                else

                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Login">Вход</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Register">Регистрация</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @if (TempData["Success"] != null)

        {
            <div class="alert alert-success text-center fw-bold">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)

        {
            <div class="alert alert-danger text-center fw-bold">
                @TempData["Error"]
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            &copy; @DateTime.Now.Year - PhoneXchange. Всички права запазени.
        </div>
    </footer>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery & validation -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
