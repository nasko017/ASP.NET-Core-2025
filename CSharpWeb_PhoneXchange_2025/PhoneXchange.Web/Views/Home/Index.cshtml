@model IEnumerable<PhoneXchange.Web.ViewModels.Ad.AdViewModel>

@{
    ViewData["Title"] = "Начало";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">PhoneXchange</h1>
        <p class="lead text-muted">Платформата за обяви на нови и употребявани телефони</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form method="get" action="/Ads">
                <div class="input-group input-group-lg">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Търси по модел или марка...">
                    <button class="btn btn-primary" type="submit">Търси</button>
                </div>
            </form>
        </div>
    </div>

    <h3 class="mb-4 text-center">📱 Последни обяви</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var ad in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@ad.ImageUrls.FirstOrDefault() ?? " https: //via.placeholder.com/400x250"" class="card-img-top" alt="Снимка">
                    <div class="card-body">
                        <h5 class="card-title">@ad.Title</h5>
                        <p class="card-text text-muted">@ad.Description</p>
                        <p class="fw-bold">@ad.Price лв.</p>
                        <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-outline-primary w-100">Виж детайли</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Ads" asp-action="Index" class="btn btn-lg btn-success px-5">Разгледай всички обяви</a>
    </div>
</div>

<footer class="bg-light text-center py-4 mt-5">
    <p class="mb-0">&copy; @DateTime.Now.Year PhoneXchange | Всички права запазени</p>
</footer>
