@model IEnumerable<PhoneXchange.Web.ViewModels.FavoriteAd.FavoriteAdViewModel>

@{
    ViewData["Title"] = "Любими обяви";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
        <p>Нямате добавени любими обяви.</p>
}
else
{
        <div class="row">
        @foreach (var ad in Model)
        {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img src="@ad.ImageUrl" class="card-img-top" alt="Image" style="height:200px; object-fit:cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@ad.Title</h5>
                                <p class="card-text"><strong>@ad.Price лв.</strong></p>
                                <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.AdId" class="btn btn-primary">Виж</a>
                            </div>
                        </div>
                    </div>
        }
        </div>
}
