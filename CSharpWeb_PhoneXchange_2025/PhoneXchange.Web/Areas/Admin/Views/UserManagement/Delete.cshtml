@model PhoneXchange.Data.Models.ApplicationUser

@{
    ViewData["Title"] = "Изтриване на потребител";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-3 text-danger">@ViewData["Title"]</h1>

    <div class="alert alert-warning shadow-sm">
        <strong>Внимание!</strong> Сигурни ли сте, че искате да изтриете потребителя
        <strong>@Model.UserName</strong> с email <strong>@Model.Email</strong>?
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Изтрий
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Отказ
        </a>
    </form>
</div>
